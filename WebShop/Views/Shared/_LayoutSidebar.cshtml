
@{
    Layout = "_Layout";
}

@section top{
    @await RenderSectionAsync("top", false)
}

@section breadcrumbs{ 
    @await RenderSectionAsync("breadcrumbs", false)
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSidebar")
            </div>
            <div class="col-sm-9 padding-right">
                @RenderBody()
                
                @await RenderSectionAsync("nav", false)
                
            </div>
        </div>
    </div>
</section>

