@if (User.Identity.IsAuthenticated)
{
    <li><i class="fa fa-lock"></i><span>Здравствуйте, <a asp-action="Index" asp-controller="Profile">@User.Identity.Name</a></span></li>
    <li>
        <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true">
            <input type="submit" value="Logout" class="btn btn-default"/>
        </form>
    </li>
}
else
{
            
    <li><a asp-action="Login" asp-controller="Account"><i class="fa fa-lock"></i>Login</a></li>
    <li><a asp-action="Register" asp-controller="Account">Registry</a></li>
    
}
