@model RegisterUserViewModel
@{
    ViewBag.Title = "Регистрация";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация пользователя</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="UserName" type="text" placeholder="@nameof(Model.UserName)" />
                        <input asp-for="Email" type="email" placeholder="@nameof(Model.Email)" />
                        <input asp-for="Password" type="password" placeholder="@nameof(Model.Password)" />
                        <input asp-for="ConfirmPassword" type="password" placeholder="@nameof(Model.ConfirmPassword)" />
                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->