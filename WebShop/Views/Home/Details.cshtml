@model WebShop.Models.Product
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>Торты, капкейки, пряники</title>
    <link href="~/Images/ico.png" rel="icon" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header>
            <img src="~/Images/ico.png" alt="logo">

            <ul class="menu">
                <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li><a asp-controller="Home" asp-action="Catalog">Каталог</a></li>
            </ul>
        </header>
        <h1>@Model.Name</h1>




        <h2>Описание товара</h2>
        <p>@Model.Description</p>
        <p>@Model.Price</p>
        <form action="">
            <button>Купить</button>
        </form>


        <div class="clear_float">
            <h2>Подробное описание товара</h2>
            <p>@Model.FullDescription</p>

            <h2>Внешний вид</h2>
            <p>@Model.Appearance</p>
        </div>
        <footer>
            &copy; <i>Все права защищены</i>
        </footer>
    </div>
</body>
</html>
